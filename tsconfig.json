{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,        
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "nuxt-i18n",
            "@nuxtjs/axios"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./static/types/vue-shims.d.ts"
    ]
}
